extends ./layout
block title
	title px-mobile | Sign-in example
block content 
	.container.gutters
		.col-12
			.page-header
				h2 Sign-in example
					small Basic form and design for a mobile sign in screen.
			pxm-example
				.container.gutters
					.col-sm-3.hidden-sm.push-4
					.col-sm-6
						.box.padding-20
							.logo.padding-10.text-center
								img(src='images/ge-monogram.svg', height='100px')
								h2.no-margin My App
								p Powered by Predix Mobility
							form
								input(type='text', placeholder='SSO', required)
								input(type='password', placeholder='Password', required)
								button.block.primary Sign in
							hr
							.clearfix
								a.pull-left.color-alt(href='#') Create account
								a.pull-right.color-alt(href='#') Reset password
